<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.redvulps.bulbassaurpositivity.MainActivity">


    <TextView
        android:id="@+id/textview_phrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_marginTop="55dp"
        android:textSize="30sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorWhite"
        android:text="@string/text_phrase"/>

    <ImageView
        android:id="@+id/imageview_bulbasaur"
        android:layout_width="225dp"
        android:layout_height="225dp"
        app:srcCompat="@drawable/bulbasaur"
        android:layout_above="@+id/button_pokeball"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/button_pokeball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pokeball"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
